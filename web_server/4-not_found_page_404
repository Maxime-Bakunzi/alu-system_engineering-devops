#!/usr/bin/env bash
# This script configures Nginx to have a custom 404 page with the required content.

# Install Nginx if not already installed (assuming you have already completed the 1-install_nginx_web_server.sh script)
if ! [ -x "$(command -v nginx)" ]; then
  sudo apt-get update
  sudo apt-get install -y nginx
fi

# Check if Nginx is installed correctly
if ! [ -x "$(command -v nginx)" ]; then
  echo "Error: Nginx installation failed. Exiting."
  exit 1
fi

# Create a configuration file for the custom 404 page
sudo bash -c 'cat > /etc/nginx/sites-available/custom_404 <<EOF
server {
    listen 80 default_server;
    server_name _;
    root /var/www/html;

    location / {
        try_files $uri $uri/ =404;
    }

    error_page 404 /404.html;
    location = /404.html {
        internal;
        echo "Ceci n'est pas une page";
    }
}
EOF'

# Enable the custom 404 site by creating a symbolic link
sudo ln -s /etc/nginx/sites-available/custom_404 /etc/nginx/sites-enabled/

# Test the Nginx configuration for syntax errors
sudo nginx -t

# Restart Nginx to apply the changes
sudo /etc/init.d/nginx restart

exit 0

