#!/usr/bin/env bash
# This script transfers a file from the client to the server using scp.

if [[ $# -lt 4 ]]; then
  echo "Usage: $0 PATH_TO_FILE IP USERNAME PATH_TO_SSH_KEY"
  exit 1
fi

file_path="$1"
server_ip="$2"
username="$3"
ssh_key="$4"

# Check if the file exists
if [[ ! -f "$file_path" ]]; then
  echo "Error: File '$file_path' does not exist."
  exit 1
fi

# Transfer the file to the server using scp
scp -i "$ssh_key" -o StrictHostKeyChecking=no "$file_path" "${username}@${server_ip}:~/"

exit 0

